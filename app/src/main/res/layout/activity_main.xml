<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/mbtSms"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="44dp"
        android:layout_marginTop="97dp"
        android:text="SMS"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/mbtemail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="115dp"
        android:text="Email"
        app:layout_constraintBaseline_toBaselineOf="@+id/mbtSms"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/mbtCamera"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="51dp"
        android:text="Camera"
        app:layout_constraintBaseline_toBaselineOf="@+id/mbtShare"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/mbtShare"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginTop="62dp"
        android:text="Share"
        app:layout_constraintStart_toStartOf="@+id/mbtemail"
        app:layout_constraintTop_toBottomOf="@+id/mbtemail" />

    <Button
        android:id="@+id/mbtMpesa"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="58dp"
        android:layout_marginEnd="59dp"
        android:text="Mpesa"
        app:layout_constraintBaseline_toBaselineOf="@+id/mbtCall"
        app:layout_constraintEnd_toStartOf="@+id/mbtemail"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/mbtCall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="87dp"
        android:layout_marginTop="71dp"
        android:layout_marginEnd="87dp"
        android:text="Call"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/mbtMpesa"
        app:layout_constraintTop_toBottomOf="@+id/mbtShare" />
</androidx.constraintlayout.widget.ConstraintLayout>